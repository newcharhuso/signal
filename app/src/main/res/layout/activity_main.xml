<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonGetRSRP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Get RSRP"
        android:onClick="onClick" />

    <TextView
        android:id="@+id/textViewRSRP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/buttonGetRSRP"
        android:layout_marginTop="16dp"
        android:text="RSRP Value: N/A" />

    <TextView
        android:id="@+id/textViewLogs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewRSRP"
        android:layout_marginTop="16dp"
        android:text=""
        android:textSize="12sp" />
</RelativeLayout>
